<% content_for(:title, 'Home') %>

<div class="columns">
  <div class="column is-hidden-mobile">&nbsp;</div>
  <div class="column is-narrow">
    <%= render 'songs/search' %>
  </div>
</div>

<div class="columns">
  <div class="column">
    <aside class="menu">
      <p class="menu-label">Frequently Played</p>
      <ul class="menu-list px-6 py-2">
        <% @top_songs.each do |song| %>
          <li>
            <%= link_to song do %>
              <div class="columns">
                <div class="column has-text-centered-mobile">
                  <%= song.title %>
                </div>
                <div class="column is-narrow has-text-weight-bold is-hidden-mobile">
                  <%= song.artist %>
                </div >
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </aside>
  </div>

  <div class="column">
    <asice class="menu">
      <p class="menu-label">New</p>
      <ul class="menu-list px-6 py-2">
        <% @new_songs.each do |song| %>
          <li>
            <%= link_to song do %>
              <div class="columns">
                <div class="column has-text-centered-mobile">
                  <%= song.title %>
                </div>
                <div class="column is-narrow has-text-weight-bold is-hidden-mobile">
                  <%= song.artist %>
                </div >
              </div>
            <% end %>
          </li>
        <% end %>
      </ul>
    </aside>
  </div>
</div>
